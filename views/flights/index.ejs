<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <h1>Flight List</h1>
    <table>
      <thead>
        <tr>
          <th>Airline</th>
          <th>Airport</th>
          <th>Flight No</th>
          <th>Departs</th>
        </tr>
      </thead>
      <tbody>
        <!-- Write the line of EJS to iterate over flight using forEach -->
        <% flights.forEach(flight => { %>
        <tr>
          <td><%= flight.airline %></td>
          <td><%= flight.airport %></td>
          <td><%= flight.flightNo %></td>
          <td><%= flight.departs %></td>
        </tr>
        <% }) %>

        <!-- Close the forEach using EJS here -->
      </tbody>
    </table>
  </body>
</html>
